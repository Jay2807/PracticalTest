<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_230sdp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_215sdp"
                    android:background="@drawable/leftbottom_rounded">

                    <TextView
                        android:id="@+id/txtday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:fontFamily="@font/sfpro_regular"
                        android:text="DAY 5"
                        android:textColor="@color/ic_unselect"
                        android:textSize="@dimen/_12sdp"></TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txtday"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:fontFamily="@font/sfpro_bold"
                        android:text="Love and Accept\nYourself"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_20sdp"></TextView>


                    <ImageView
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="@dimen/_125sdp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="@dimen/_25sdp"
                        android:layout_marginEnd="-20dp"
                        android:scaleType="center"
                        android:src="@mipmap/ic_nature"></ImageView>

                    <ImageView
                        android:layout_width="@dimen/_90sdp"
                        android:layout_height="@dimen/_120sdp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginTop="@dimen/_30sdp"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/ic_naturenew"></ImageView>


                </RelativeLayout>

                <ImageView
                    android:layout_width="@dimen/_140sdp"
                    android:layout_height="@dimen/_150sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:src="@mipmap/ic_girl"></ImageView>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:fontFamily="@font/sfpro_regular"
                    android:paddingStart="@dimen/_15sdp"
                    android:paddingTop="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_5sdp"
                    android:text="Popular"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_17sdp"></TextView>

                <TextView
                    android:id="@+id/txtseeall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:fontFamily="@font/sfpro_regular"
                    android:paddingStart="@dimen/_15sdp"
                    android:paddingTop="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_5sdp"
                    android:text="See All"
                    android:textColor="@color/ic_blue"
                    android:textSize="@dimen/_13sdp"></TextView>


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ProgressBar
                    android:id="@+id/progress_circular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"></ProgressBar>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_popular"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_150sdp"
                    android:clipToPadding="false"
                    android:orientation="horizontal"></androidx.recyclerview.widget.RecyclerView>


            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:fontFamily="@font/sfpro_regular"
                    android:paddingStart="@dimen/_15sdp"
                    android:paddingTop="@dimen/_10sdp"
                    android:text="New"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_17sdp"></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:fontFamily="@font/sfpro_regular"
                    android:paddingStart="@dimen/_15sdp"
                    android:paddingBottom="@dimen/_5sdp"
                    android:text="See All"
                    android:textColor="@color/ic_blue"
                    android:textSize="@dimen/_13sdp"></TextView>


            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_new"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_150sdp"
                android:clipToPadding="false"
                android:orientation="horizontal"></androidx.recyclerview.widget.RecyclerView>


        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</RelativeLayout>